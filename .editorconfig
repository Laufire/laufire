# #Credit: http://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Windows specific files
[*.{exe.manifest,bat}]
indent_style = tab
charset = latin1
end_of_line = crlf

# Other Files
[*.yaml]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
